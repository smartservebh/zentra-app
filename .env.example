# Server Configuration
NODE_ENV=production
PORT=3000

# Database
MONGODB_URI=mongodb://localhost:27017/zentra
# For production, use MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/zentra?retryWrites=true&w=majority

# OpenAI API
OPENAI_API_KEY=your-openai-api-key-here

# JWT Secret
JWT_SECRET=your-super-secret-jwt-key-here-change-this

# Email Configuration (SendGrid)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=your-sendgrid-api-key
EMAIL_REPLY_TO=info@zentrahub.pro

# Stripe Configuration
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret
STRIPE_PRICE_FREE=price_free
STRIPE_PRICE_STARTER=price_starter_20
STRIPE_PRICE_BUILDER=price_builder_50
STRIPE_PRICE_PRO=price_pro_100

# Google OAuth (Optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Session Secret
SESSION_SECRET=your-session-secret-here

# Frontend URL
FRONTEND_URL=https://zentrahub.pro

# Redis (for rate limiting)
REDIS_URL=redis://localhost:6379

# Sentry (Error Tracking)
SENTRY_DSN=your-sentry-dsn-here

# Analytics (Optional)
GA_TRACKING_ID=your-google-analytics-id
FB_PIXEL_ID=your-facebook-pixel-id